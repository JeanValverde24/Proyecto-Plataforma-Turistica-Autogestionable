@model List<Proyecto.Models.HistorialServicio>

<h2 class="text-center my-5 text-primary font-weight-bold">Historial de Servicios</h2>

<div class="table-responsive">
    <table class="table table-hover table-striped table-bordered text-center shadow-lg">
        <thead class="bg-primary text-white">
            <tr>
                <th>Nombre del Local</th>
                <th>Fecha de Servicio</th>
                <th>Servicio</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servicio in Model)
            {
                <tr>
                    <td class="align-middle">@servicio.NombreLocal</td>
                    <td class="align-middle">@servicio.Fecha.ToString("dd/MM/yyyy")</td>
                    <td class="align-middle">@servicio.Servicio</td>
                    <td class="align-middle">
                        @if (!servicio.Calificado)
                        {
                            <a href="/Perfil/DejarFeedback?local=@servicio.NombreLocal" class="btn btn-sm btn-warning font-weight-bold">
                                <i class="fas fa-comment-dots"></i> Dejar Feedback
                            </a>
                        }
                        else
                        {
                            <span class="badge badge-success py-2 px-3"><i class="fas fa-check-circle"></i> Ya calificado</span>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>